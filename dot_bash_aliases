# list aliases
alias la="ls -AF"                   # List all files
alias ld="ls -d */"                 # List only directories
alias l.="ls -A | egrep '^\.'"      # List only dotfiles (hidden files)
alias l1='ls -1AF'                  # List files (one line at a time)
alias ll="ls -lhAF"                 # List all file details
alias lg="ls -AF | grep"            # Grep through filenames (also see, hg)
alias lp="ls -d `pwd`/*"            # List full paths
alias lpg="ls -d `pwd`/* | grep"    # Grep through filenames but list full path
alias lt="ls -Alt"                  # Sort by time
alias ltr="ls -Altr"                # Sort by time (reverse)
alias lss="ls -AFlS"                # Sort by size
alias lsr="ls -AFlSr"               # Sort by size (reverse)

# tar aliases
alias tarc="tar czvf"
alias tarx="tar xzvf"
alias tart="tar tzvf"

# cd ..
alias .......='cd ../../../../../..' # 6 Back
alias ......='cd ../../../../..'     # 5 Back
alias .....='cd ../../../..'         # 4 Back
alias ....='cd ../../..'             # 3 Back
alias ...='cd ../..'                 # 2 Back
alias ..='cd ..'                     # 1 Back

# vi 
alias vim='nvim'
alias vi='nvim'

# Always show free disk space in human-readable format
alias df='df -h'
alias du='du -h'

#ubuntu update
alias upd="sudo apt-get update; sudo apt-get -y upgrade"

# Work related
alias pdef="source ~/py_envs/pdef/bin/activate"
alias ovpn="sudo openvpn --config ~/sft_installs/srivatsas__ssl_vpn_config.ovpn"
alias fuseki='/home/srivatsas/sft_installs/apache-jena-fuseki-4.2.0/fuseki-server --update --mem /ds'
alias blaze='java -server -Xmx4g -jar /home/srivatsas/sft_installs/blazegraph.jar'
